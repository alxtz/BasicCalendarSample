<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.bj.calendarwork3.AddNoteActivity"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2"
        android:background="#A0A0A0">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:id="@+id/AddNoteBar"
            android:layout_below="@+id/BorderTop"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#A0A0A0"
                android:id="@+id/AddNoteBarBorder"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_marginLeft="35px"
                android:layout_marginRight="35px"
                android:background="#FFFFA0">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#0000A0"
                    android:hint="新增提醒事項..."
                    android:textColorHint="#8080A0"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:id="@+id/SetTimeBar"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/AddNoteBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_marginLeft="35px"
                android:layout_marginRight="35px"
                android:background="#FFFFA0" >

                <EditText
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#0000A0"
                    android:text="2016" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="年"
                    android:id="@+id/textView8"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/editText2"
                    android:textColor="#0000A0" />

                <EditText
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText3"
                    android:textColor="#0000A0"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView8"
                    android:text="7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="月"
                    android:id="@+id/textView9"
                    android:textColor="#0000A0"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_toEndOf="@+id/editText3" />

                <EditText
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"
                    android:textColor="#0000A0"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView9"
                    android:text="9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="日"
                    android:id="@+id/textView10"
                    android:textColor="#0000A0"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/editText4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#A0A0A0"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:id="@+id/YesNoBar"
            android:background="#FFFFFF"
            android:layout_below="@+id/SetTimeBar"
            android:layout_toStartOf="@+id/BorderRight">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:id="@+id/button3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textSize="20px" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確認"
                android:id="@+id/button4"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/button3"
                android:textSize="20px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="260px"
            android:background="#000000"
            android:id="@+id/BorderLeft"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/BorderBottom" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="260px"
            android:background="#000000"
            android:id="@+id/BorderRight"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/BorderTop"></RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
